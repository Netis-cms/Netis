{
  "name": "project",
  "version": "1.0.0",
  "dependencies": {
    "dashboard-skeleton-compostrap": "^2.0.3",
    "live-form-validation": "^1.10.0",
    "naja": "^2.2.1",
    "nette-forms": "^3.3.1",
    "perfect-scrollbar": "^1.5.3"
  },
  "devDependencies": {
    "bootstrap": "^5.1.3",
    "concurrently": "^6.4.0",
    "nanobar": "^0.4.2",
    "parcel-bundler": "^1.12.5",
    "parcel-plugin-custom-dist-structure": "^1.1.18",
    "sass": "^1.44.0"
  },
  "scripts": {
    "postinstall": "npm run docker:build && npm run docker:dev",
    "docker:build": "concurrently -n=build -c=green \"docker-compose build\"",
    "docker:dev": "concurrently -n=dev -c=blue \"docker-compose -f docker-compose.yml -f docker-compose.dev.yml up\"",
    "docker:pro": "concurrently -n=pro -c=blue \"docker-compose up --no-deps php\"",
    "docker:off": "docker-compose down",
    "parcel-dev": "parcel watch public/scripts/install.js public/scripts/sign.js public/scripts/admin.js --public-url ./ --out-dir www",
    "parcel-build": "parcel build public/scripts/install.js public/scripts/sign.js public/scripts/admin.js --public-url ./ --out-dir www"
  },
  "customDistStructure": {
    "config": {
      "js": [
        ".js",
        ".js.map"
      ],
      "css": [
        ".css",
        ".css.map"
      ],
      "fonts": [
        ".woff",
        ".woff2",
        ".svg",
        ".eot",
        ".ttf"
      ],
      "images": [
        ".jpg",
        ".png"
      ]
    },
    "options": {
      "development": true
    }
  }
}
