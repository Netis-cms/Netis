<h5>{_'Edit or add roles to users'}</h5>
<form n:name="factory" class="ajax row g-2">

	{snippet errors}
		<ul n:if="$form->hasErrors()" class="errors">
			<li n:foreach="$form->errors as $error">{$error}</li>
		</ul>
	{/snippet}

	<div class="col-md-12">
		<select n:name="user_id" class="form-control"></select>
	</div>

	<div class="col-md-12">
		<select n:name="role_id" class="form-control"></select>
	</div>

	<div class="col-md-auto">
		<button n:name="send" class="btn btn-custom-color text-white" data-btn-submit>{_'Send'}</button>
		<input type="reset" class="reset-form-factory btn btn-secondary">
	</div>

</form>
