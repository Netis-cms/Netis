{varType Drago\Authorization\Entity\RolesEntity $role}
<h5>{_'Roles'}</h5>
<div class="table-responsive-sm">
	<table class="table table-sm table-striped table-hover table-borderless">

		<thead>
		<tr>
			<th scope="col">{_'Name'}</th>
			<th scope="col">{_'Parent'}</th>
			<th scope="col">{_'Action'}</th>
		</tr>
		</thead>

		<tbody>
		<tr n:foreach="$roles as $role">
			<td style="width: 40%">{$role->name}</td>
			<td style="width: 35%">{$role->parent}</td>
			<td style="width: 25%">
				<a n:href="edit!, $role->id" class="ajax link-secondary text-decoration-none" data-bs-toggle="tooltip" data-bs-placement="left" title="{_'Edit'}" data-naja-history="off">
					<i class="fas fa-pencil-alt"></i>
				</a>
				{if $deleteId === $role->id}
					<a n:href="deleteConfirm!, 0, $role->id" class="ajax link-secondary text-bolder text-decoration-none" data-naja-history="off">{_'No'}</a>
					<a n:href="deleteConfirm!, 1, $role->id" class="ajax link-danger text-bolder text-decoration-none" data-naja-history="off">{_'Yes'}</a>
				{else}
					<a n:href="delete!, $role->id" class="ajax link-secondary text-decoration-none" data-bs-toggle="tooltip" data-bs-placement="right" title="{_'Delete'}" data-naja-history="off">
						<i class="fas fa-trash-alt"></i>
					</a>
				{/if}
			</td>
		</tr>
		</tbody>

	</table>
</div>
