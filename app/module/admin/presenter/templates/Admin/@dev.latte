<!doctype html>
<html lang="{$lang}">

<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

	<!-- build:css {$basePath}/www/css/admin.min.css -->
	<link rel="stylesheet" href="{$basePath}/node_modules/bootstrap/dist/css/bootstrap.css">
	<link rel="stylesheet" href="{$basePath}/node_modules/font-awesome/css/font-awesome.css">
	<link rel="stylesheet" href="{$basePath}/node_modules/open-sans-fontface/open-sans.css">
	<link rel="stylesheet" href="{$basePath}/node_modules/perfect-scrollbar/css/perfect-scrollbar.css">
	<link rel="stylesheet" href="{$basePath}/node_modules/sidebar-menu-compostrap/dist/css/sidebar.css"
	<!-- /build -->

	<title>{include subtitle|stripHtml|firstUpper}{ifset $web} &bullet; {$web->website}{/ifset}</title>
</head>

<body class="bg-light">
<div class="d-flex nav-fixed" id="wrapper">

	<!-- sidebar -->
	<nav role="navigation" class="sidebar sidebar-white sidebar-menu-magenta rounded-0">

		<!-- sidebar menu -->
		<div class="sidebar-menu">

			<!-- menu -->
			<ul class="list list-unstyled list-scrollbar">

				<!-- simple menu -->
				<li class="list-item">

					<!-- list title -->
					<p class="list-title text-uppercase">{_'category.language'}</p>

					<!-- list items -->
					<ul class="list-unstyled">
						<li><a n:href="this, 'lang' => 'cs'" n:class="$lang === 'cs' ? 'list-link link-current' : 'list-link'">{_'menu.cs'}</a></li>
						<li><a n:href="this, 'lang' => 'en'" n:class="$lang === 'en' ? 'list-link link-current' : 'list-link'">{_'menu.en'}</a></li>
					</ul>
				</li>

				<!-- multi-level dropdown menu -->
				<li class="list-item">

					<!-- list title -->
					<p class="list-title text-uppercase">Dashboard</p>

					<!-- list items, first level -->
					<ul class="list-unstyled">
						<li><a href="#" class="list-link"><span class="list-icon"><i class="fa fa-home" aria-hidden="true"></i></span>Home</a></li>
					</ul>
				</li>
			</ul>
		</div>
	</nav>

	<!-- content wrapper -->
	<div class="content">

		<!-- navbar -->
		<nav class="navbar navbar-expand-lg fixed-top navbar-light">

			<!-- navbar title -->
			<a class="navbar-brand" href="#">{_'subtitle'}</a>

			<!-- navbar nav -->
			<div class="navbar-nav">
				<a class="nav-item nav-link nav-bars" id="sidebar-toggle" href="#">
					<i class="fa fa-bars" aria-hidden="true"></i>
				</a>
			</div>

		</nav>

		<!-- main content -->
		<main role="main" class="container-fluid">
			<h2>Sidebar menu build on Bootstrap 4</h2>
			<p>
				Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.
			</p>
		</main>
	</div>
</div>

<!-- build:js {$basePath}/www/js/admin.min.js -->
<script src="{$basePath}/node_modules/jquery/dist/jquery.js"></script>
<script src="{$basePath}/node_modules/bootstrap/dist/js/bootstrap.bundle.js"></script>
<script src="{$basePath}/node_modules/perfect-scrollbar/dist/perfect-scrollbar.js"></script>
<script src="{$basePath}/node_modules/nanobar/nanobar.js"></script>
<script src="{$basePath}/node_modules/sidebar-menu-compostrap/dist/js/sidebar.menu.js"></script>
<!-- /build -->

<script>
	$(function() {
		new PerfectScrollbar('.list-scrollbar');
		const nanobar = new Nanobar();
		nanobar.go(100);
	});
</script>

</body>
</html>
