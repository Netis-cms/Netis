<!DOCTYPE html>
<html lang="{$lang}">

<head>
	<meta charset="utf-8">
	<meta name="description" content="{_'subtitle'}">
	<meta name="author" content="Zdeněk Papučík, zdenek.papucik@gmail.com">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	<link rel="stylesheet" href="{$basePath}/www/css/install.min.css">

	{* website title and subtitle *}
	<title>{include subtitle|stripHtml|firstUpper}</title>
</head>

<body>
	{snippet install}
	<div class="container-fluid">
		<div class="header">
			<div class="clearfix">

				{* logo *}
				<div class="float-left">
					<a n:href=":Install:Install:" title="Netis, Little CMS">
						<img src="{$basePath}/www/img/logo.png" alt="Netis, Little CMS">
					</a>
				</div>

				{* steps install *}
				<div class="float-right">

					{* steps icons *}
					{if $step === 0}
					{var $item = 'info.png'}
					{elseif $step === 1}{var $item = 'server.png'}
					{elseif $step === 2}{var $item = 'db.png'}
					{elseif $step === 3}{var $item = 'website.png'}
					{elseif $step === 4}{var $item = 'account.png'}
					{elseif $step === 5}{var $item = 'done.png'}
					{/if}

					{* steps info *}
					<p class="steps">{_'install.steps'} {$step}/5</p>
				</div>
			</div>
		</div>

		<div n:foreach="$flashes as $flash" class="alert alert-secondary alert-dismissible fade show border-0 rounded-0" role="alert">
			<strong>{_$flash->message}</strong>
			<button type="button" class="close" data-dismiss="alert" aria-label="Close">
				<span aria-hidden="true">&times;</span>
			</button>
		</div>

		<div class="container">
			<div class="row">

				{* content *}
				<div class="col-md-7">
					{include content|indent:5}
				</div>

				{* step icon *}
				<div class="col-md-5">
					<img src="{$basePath}/www/img/{$item}" class="steps-ico" alt="ico">
				</div>
			</div>
		</div>
	</div>
	{/snippet}

	{* javascript libraries and plugins *}
	<script src="{$basePath}/www/js/main.min.js"></script>
	<script>
		$(function() {

			// alert message
			$('.alert').alert();

			// live form validation
			LiveForm.setOptions({
				messageErrorClass: 'form-error',
				messageErrorPrefix: '',
				wait: 500
			});

			// nette ajax
			$.nette.init();
		});
	</script>
</body>

</html>
