<!DOCTYPE html>
<html lang="{$lang}">

<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

	{if $mode === false}
		<link rel="stylesheet" href="{$basePath}/assets/dist/css/bootstrap.css">
		<link rel="stylesheet" href="{$basePath}/node_modules/open-sans-fontface/open-sans.css">
		<link rel="stylesheet" href="{$basePath}/node_modules/@fortawesome/fontawesome-free/css/all.css">
		<link rel="stylesheet" href="{$basePath}/assets/dist/css/install.css">
		<link rel="stylesheet" href="{$basePath}/assets/dist/css/base.css">

		{else}
		<link rel="stylesheet" href="{$basePath}/www/css/install.min.css">
	{/if}

	<title>{include subtitle|stripHtml|firstUpper}</title>
</head>

<body>
<div n:snippet="install" class="container-fluid container-fluid-install">

	{* header*}
	<div class="header-install">
		<div class="clearfix">

			{* logo *}
			<div class="float-left">
				<a n:href=":Install:Install:" class="text-decoration-none logo">Netis</a>
			</div>

			{* steps install *}
			<div class="float-right">

				{* steps icons *}
				{if $step === 0}
					{var $item = 'fa-question'}
				{elseif $step === 1}{var $item = 'fa-server'}
				{elseif $step === 2}{var $item = 'fa-database'}
				{elseif $step === 3}{var $item = 'fa-globe'}
				{elseif $step === 4}{var $item = 'fa-user-plus'}
				{elseif $step === 5}{var $item = 'fa-check'}
				{/if}

				{* steps info *}
				<p class="steps-install">{_'install.steps'} {$step}/5</p>
			</div>
		</div>
	</div>

	{* flash message *}
	<div n:foreach="$flashes as $flash" class="alert alert-install alert-secondary fade show border-0 rounded-0" role="alert">
		<div class="container alert-dismissible">{_$flash->message}
			<button type="button" class="close" data-dismiss="alert" aria-label="Close">
				<span aria-hidden="true">&times;</span>
			</button>
		</div>
	</div>

	{* content *}
	<div class="container container-install">
		<div class="row">

			{* include block content *}
			<div class="col-md-7">
				{include content|indent:5}
			</div>

			{* step icon *}
			<div class="col-md-5">
				<div class="steps-install-ico">
					<i class="fa {$item}" aria-hidden="true"></i>
				</div>
			</div>
		</div>
	</div>
</div>

{* copyright info *}
<div class="footer">
	<div class="container">
		<p class="footer-text text-center">&copy {date(Y)} Netis</p>
	</div>
</div>

{if $mode === false}
	<script src="{$basePath}/node_modules/jquery/dist/jquery.js"></script>
	<script src="{$basePath}/node_modules/bootstrap/dist/js/bootstrap.bundle.js"></script>
	<script src="{$basePath}/vendor/nette/forms/src/assets/netteForms.js"></script>
	<script src="{$basePath}/node_modules/nette.ajax.js/nette.ajax.js"></script>
	<script src="{$basePath}/node_modules/live-form-validation/live-form-validation.js"></script>
	<script src="{$basePath}/assets/dist/js/spinner.btn.js"></script>

{else}
	<script src="{$basePath}/www/js/app.min.js"></script>
{/if}

<script>
	$(function() {

		// alert message
		$('.alert').alert();

		// live form validation
		LiveForm.setOptions({
			messageErrorClass: 'form-errors-live',
			messageErrorPrefix: '',
			wait: 500
		});

		// nette ajax
		$.nette.init();
	});
</script>

</body>
</html>
