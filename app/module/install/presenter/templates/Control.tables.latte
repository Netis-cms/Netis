
{* install database tables *}
{form tables class => 'ajax'}

	{* form ajax errors *}
	{snippet errors}
	<ul class="errors" n:if="$form->hasErrors()">
		<li n:foreach="$form->errors as $error">{_$error}</li>
	</ul>
	{/snippet}

	{* form send button *}
	<div class="wrapper">
		{input send class => 'button primary'}
	</div>
{/form}
