{templateType App\Authorization\Control\ComponentTemplate}
{embed ../../../../Core/Widget/@offcanvas.latte, offcanvasId: $uniqueComponentOffcanvas}
	{block title}{_'Edit or add permissions'}{/block}
	{block content}
		{snippet permissions}
			{embed ../../../../Core/Widget/@form.latte, name: 'factory', class: 'ajax'}
				{block form}
					{var string $selectTom = 'select-tom'}
					{include selectTom, name: 'role_id', columns: 6, class: $selectTom}
					{include selectTom, name: 'resource_id', columns: 6, class: $selectTom}
					{include selectTom, name: 'privilege_id', columns: 6, class: $selectTom}
					{include selectTom, name: 'allowed', columns: 6, class: $selectTom}
					<div class="d-block">
						{include submit, name: 'send'}
						{include buttonDismiss, buttonCanvas: true}
					</div>
				{/block}
			{/embed}
		{/snippet}
	{/block}
{/embed}

{embed ../../../../Core/Widget/@modal.latte, modalId: $uniqueComponentModal}
	{block title}{_'Delete item'}{/block}
	{block content}<p n:snippet="title"><em>{_'Are you sure you want to delete the item: '}{$deleteItems}?</em></p>{/block}
	{block factory}
		{snippet delete}
			{embed ../../../../Core/Widget/@form.latte, name: 'delete', class: 'ajax'}
				{block form}
					<div class="d-block">
						{include submit, name: 'confirm'}
						{include buttonDismiss, buttonModal: true}
					</div>
				{/block}
			{/embed}
		{/snippet}
	{/block}
{/embed}

{embed ../../../../Core/Widget/@heading.latte}
	{block title}{_'Permissions'}{/block}
{/embed}

{control grid}
